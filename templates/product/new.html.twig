{% extends 'base.html.twig' %}

{% block title %}Création d'un produit{% endblock %}

{% form_theme form _self %}

{% block body %}

<div class="container">
    <h1 class="my-5">Création d'un produit</h1>


    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            <div class="alert alert-light">
                <h2>Informations générales</h2>
                <hr />
                {{ form_row(form.name) }}
                {{ form_row(form.slug) }}
                {{ form_row(form.favorite) }}
                {{ form_row(form.color) }}
            </div>
            <div class="alert alert-light">
                <h2>Détails prix du produit</h2>
                <hr />
                {{ form_row(form.price) }}
                {{ form_row(form.discount) }}
            </div>
        </div>
        <div class="col">
            <div class="alert alert-light">
                <h2>Images de l'annonce</h2>
                <hr />
                {{ form_row(form.image) }}
            </div>
        </div>
    </div>

    <div class="alert alert-primary clearfix">
        <h2 class="alert-heading">Enregistrer mon annonce</h2>
        <p>Vous êtes sur le point de créer votre annonce,
            pas d'inquiétude vous pourrez la modifier à tout instant !</p>
        <button type="submit" class="btn btn-secondary float-right">
            <i class="fas fa-check"></i>
            Créer la nouvelle annonce</button>
    </div>

    {{ form_end(form) }}
</div>
</div>

{% endblock %}