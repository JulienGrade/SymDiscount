{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-3 text-center">
                <img src="{{ user.picture }}" class="avatar mb-3" alt="Avatar de {{ user.fullName }}" />
                <br />
                <span class="badge badge-primary"> commentaires</span>
            </div>
            <div class="col-9">
                <h1>{{ user.fullName }}</h1>
                <p>{{ user.introduction }}</p>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">
                            Modifier mon profil
                        </a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">
                            Modifier mon pot de passe
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>

        <hr>

        <h2>Les commentaires de {{ user.fullName }}</h2>


            <div class="alert alert-warning">
                <p>
                    <strong>{{ user.fullName }}</strong> n'a pas encore de commentaires sur le site !
                </p>
            </div>
    </div

{% endblock %}
