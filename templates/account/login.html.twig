{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
<div class="container">
    <div class="row mb-5">
        <div class="col-md-3">
            &nbsp;
        </div>
        <div class="col-md-6">
            <div class="bg-light py-5 px-5 mt-5">
                <h1 class="mt-5">Connectez vous !</h1>

                {% if hasError %}

                    <div class="alert alert-danger">
                        Le nom d'utilisateur et/ou le mot de passe n'est pas valide
                    </div>

                {% endif %}

                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="_username" id="email" class="form-control"
                               placeholder="Adresse email..." required value="{{ username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control"
                               placeholder="Mot de passe..." required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Connexion !</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
{% endblock %}
